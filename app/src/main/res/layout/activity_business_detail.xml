<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.BusinessDetailActivity">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/sliderLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:auto_cycle="true" />

    <com.ldt.springback.view.SpringBackLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <!--android:background="@drawable/bg_card_view"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardview_detail"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/imageview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img" />

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginVertical="10dp"
                                android:layout_marginEnd="7dp"
                                android:layout_toEndOf="@id/cardview_detail"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/name_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Business Name"
                                    android:textColor="@color/lightBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/last_update_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Last update" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/like_detail"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_favorite_unselected"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/category_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="Arts and Humanities"
                            android:textColor="@color/lightBlackSpotify"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ratingText_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/orange"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="0.0"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <RatingBar
                                android:id="@+id/ratingBar_detail"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:numStars="5"
                                android:progressBackgroundTint="@color/darkerGrey"
                                android:progressTint="@color/orange_premium" />


                            <TextView
                                android:id="@+id/rating_count_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="(676)"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Information"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/addressLayout_detail"
                        style="@style/item_cardview"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <RelativeLayout style="@style/item_relativeLayout">

                            <ImageView
                                android:id="@+id/qwe"
                                style="@style/item_imageview"
                                android:src="@drawable/address" />

                            <LinearLayout
                                style="@style/item_layout"
                                android:layout_toEndOf="@+id/qwe">

                                <TextView
                                    android:id="@+id/category_u1ser_1list"
                                    style="@style/item_light_textview"
                                    android:text="Address" />

                                <TextView
                                    android:id="@+id/address_detail"
                                    style="@style/item_dark_textview"
                                    android:text="667 Wiegend Gardens Suite, Los Angeles, United States" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/numberLayout_detail"
                        style="@style/item_cardview"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <RelativeLayout style="@style/item_relativeLayout">

                            <ImageView
                                android:id="@+id/qwe22"
                                style="@style/item_imageview"
                                android:src="@drawable/phone" />

                            <LinearLayout
                                style="@style/item_layout"
                                android:layout_toEndOf="@+id/qwe22">

                                <TextView
                                    android:id="@+id/category_u1s2er_list"
                                    style="@style/item_light_textview"
                                    android:text="Phone" />

                                <TextView
                                    android:id="@+id/number_detail"
                                    style="@style/item_dark_textview"
                                    android:text="1234567890" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/emailLayout_detail"
                        style="@style/item_cardview"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <RelativeLayout style="@style/item_relativeLayout">

                            <ImageView
                                android:id="@+id/qwe222"
                                style="@style/item_imageview"
                                android:src="@drawable/email" />

                            <LinearLayout
                                style="@style/item_layout"
                                android:layout_toEndOf="@+id/qwe222">

                                <TextView
                                    android:id="@+id/category_u1ser_list1"
                                    style="@style/item_light_textview"
                                    android:text="Email" />

                                <TextView
                                    android:id="@+id/email_detail"
                                    style="@style/item_dark_textview"
                                    android:text="user@example.com" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/websiteLayout_detail"
                        style="@style/item_cardview"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <RelativeLayout style="@style/item_relativeLayout">

                            <ImageView
                                android:id="@+id/qwe3"
                                style="@style/item_imageview"
                                android:src="@drawable/website" />

                            <LinearLayout
                                style="@style/item_layout"
                                android:layout_toEndOf="@+id/qwe3">

                                <TextView
                                    android:id="@+id/category_u1ser_list"
                                    style="@style/item_light_textview"
                                    android:text="Website" />

                                <TextView
                                    android:id="@+id/website_detail"
                                    style="@style/item_dark_textview"
                                    android:text="www.example.com" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/whatsappLayout_detail"
                        style="@style/item_cardview"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <RelativeLayout style="@style/item_relativeLayout">

                            <ImageView
                                android:id="@+id/qwe4"
                                style="@style/item_imageview"
                                android:src="@drawable/whatsapp" />

                            <LinearLayout
                                style="@style/item_layout"
                                android:layout_toEndOf="@+id/qwe4">

                                <TextView
                                    android:id="@+id/cat1egory_u1ser_list"
                                    style="@style/item_light_textview"
                                    android:text="WhatsApp" />

                                <TextView
                                    android:id="@+id/whatsapp_detail"
                                    style="@style/item_dark_textview"
                                    android:text="1234567890" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/description_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="Rate this business"
                            android:textColor="@color/lightBlack"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="Tell others what you think"
                            android:textSize="13sp" />

                        <RatingBar
                            android:id="@+id/rate_business_detail"
                            style="@style/Widget.AppCompat.RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="40dp"
                            android:numStars="5"
                            android:progressBackgroundTint="@color/grey"
                            android:progressTint="@color/orange_premium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.ldt.springback.view.SpringBackLayout>

    <ImageView
        android:id="@+id/backBtn_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:id="@+id/messageBtnDetail"
        android:src="@drawable/ic_baseline_chat_24"
        app:backgroundTint="@color/orange_premium"
        app:fabSize="normal"
        android:scaleType="center"
        app:tint="@color/white" />

</RelativeLayout>